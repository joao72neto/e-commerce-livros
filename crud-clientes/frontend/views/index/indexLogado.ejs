<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/pages/index.css">
    <title>e-commerce-livros</title>
</head>
<body>

    <div class="main-container">

        <div class="conteudo">
            <%- include('../components/headerIndex') %>
            
            <main>
                <div class="banner"></div>
                <div class="books">
                    <% livros.forEach(livro => { %>
                        <div class="book">
                            <div class="imagem">
                                <img src="<%=livro.lvr_capa%>" alt="">
                            </div>
                            <p><strong><%=livro.lvr_titulo%></strong></p>
                            <p class="invisible book-id"><%=livro.lvr_id%></p>
                            <p class="preco">R$<%=String(livro.lvr_preco).replace('.', ',')%></p>
                            <div class="compra"><a>Comprar</a></div>
                        </div>
                    <% }); %>
            </main>
            <div class="space"></div>
            
            <%- include('../components/footer') %>
        </div>

        <nav class="sidebar">
            <h2 for="">Cliente</h2>
            <ul>
                <li><a href="/perfil">Perfil</a></li>
                <li><a href="/pedidos">Meus Pedidos</a></li>
            </ul>
            <h2 for="">ADM</h2>
            <ul>
                <li><a href="/clientes">Gerenciar Clientes</a></li>
                <li><a href="/pedidos/gerenciar">Gerenciar Pedidos</a></li>
                <li><a href="/vendas/historico">Hist√≥rico de Vendas</a></li>
                <li><a href="/estoque">Controle de Estoque</a></li>
                <li><a href="/logs">Logs</a></li>
            </ul>
        </nav>
    </div>


    <script type="module" src="/javaScript/pages/index/indexLogado.js"></script>

</body>
</html>