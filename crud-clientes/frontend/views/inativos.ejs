<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Clientes Inativos</title>
</head>
<body>
    <div class="voltar"><a href="/">Voltar</a></div>
    <div class="container-inat">
        <div class="inativos">
            <h1>Clientes Inativos</h1>
            <div id="clientes-inativos">

                <% inativos.forEach(cliente => { %>

                    <div class="cliente-wrapper">
                        <div class="cliente">
                            <p class="invisible cliente-inat-id"><%=cliente.clt_id%></p>
                            <p><%=cliente.clt_nome%></p>
                            <p><%=cliente.clt_email%></p>
                        </div>
                        <div class="acoes">
                            <button class="btn-inat">Reativar</button>
                        </div>
                    </div>

                <% }); %>                
            </div>
        </div>
    </div>

    <script type="module" src="/javaScript/inativos.js"></script>
</body>
</html>
