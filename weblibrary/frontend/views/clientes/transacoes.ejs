<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/pages/clientes/transacoes.css">
    <link rel="shortcut icon" href="/images/icon/book.png" type="image/x-icon">
    <title>Transações</title>
</head>
<body>
    
    <div class="main-container">


        <%- include('../components/header', {
            titulo: 'Transações',
            path: '/clientes'
        })%>

        <div class="container-tran">
            <div class="transaction">
                <h2>Transações de <span id="nome-cliente"></span></h2>
                <p>Email: <span id="email-cliente"></span></p>
                <table id="lista-transacoes">
                    <thead>
                        <tr>
                            <th class="top-left">Data e Hora</th>
                            <th>Usuário</th>
                            <th>Tipo de Ação</th>
                            <th class="top-right">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transacoes.forEach(transacao => { %>
                            <tr class="tb-body">
                                <td><%=transacao.trs_dataHora%></td>
                                <td><%=transacao.trs_user_type%></td>
                                <td><%=transacao.trs_tipo%></td>
                                <td><%=transacao.trs_acao%></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('../components/footer')%>

    </div>

    <script type="module" src="/javaScript/pages/clientes/transacoes.js"></script>

</body>
</html>