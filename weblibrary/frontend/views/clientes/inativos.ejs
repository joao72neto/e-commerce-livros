<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/pages/clientes/inativos.css">
    <link rel="shortcut icon" href="/images/icon/book.png" type="image/x-icon">
    <title>Clientes Inativos</title>
</head>
<body>
   
    <div class="main-container">

        <%- include('../components/header', {
            titulo: 'Clientes Inativos',
            path: '/clientes'
        })%>

        <div class="container-inat">
            <div class="inativos">
                <h1 class="title">Todos os Clientes</h1>
                <div id="clientes-inativos">
                    <% inativos.forEach(cliente => { %>
                        <div class="wrapper">
                            <div class="cliente">
                                <p class="invisible cliente-inat-id"><%=cliente.clt_id%></p>
                                <p><%=cliente.clt_nome%></p>
                                <p><%=cliente.clt_email%></p>
                            </div>
                            <div class="acoes">
                                <a class="btn-inat">Reativar</a>
                                <a class="btn-delete">Excluir</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <%- include('../components/footer') %>

    </div>

    <script type="module" src="/javaScript/pages/clientes/inativos.js"></script>
</body>
</html>
